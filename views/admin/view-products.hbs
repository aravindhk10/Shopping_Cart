<section>
  <div class="container mt-5">
    <div class="row mt-4 mb-3">
      <a style="width: 15%;" href="/admin/add-product" class="btn btn-primary ms-auto">Add Products</a>
    </div>
    <table class="table " id="admintable">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>Rs.{{this.Price}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt="{{this.Name}}"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

<script>
  $(function () {
    $('#admintable').DataTable();
  })
</script>